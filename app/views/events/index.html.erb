<h1>Events</h1>
<% if !@user.events.empty? %>
<table border="1">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Date</th>
    <th>Deadline?</th>
    <th></th>
  </tr>
  <% @sorted_events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.description %></td>
    <td><%= event.date %></td>
    <td><%= event.isDeadline %></td>
    <td><%= link_to "Delete Event", [event.user, event],
                    method: :delete,
                    data: { confirm: "Are you sure you want to delete this event?" }%>
    </td>
  </tr>
  <% end %>
<% else %>
  <p>You have no events!</p>
<% end %>
</table>
